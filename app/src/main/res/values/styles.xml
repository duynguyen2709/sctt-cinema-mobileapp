<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">#123</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextAppearanceTab" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/textTablayout</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="EditTextSignUp">
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">@drawable/round_corner_edit_text</item>
    </style>

    <style name="normal_text">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="normal_text.bold" parent="normal_text">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="normal_text.SemiBold" parent="normal_text">
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="SF_Bold.Size16" parent="normal_text">
        <item name="android:fontFamily">@font/sanfrancisco_bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SF_SemiBold.Size16" parent="normal_text">
        <item name="android:fontFamily">@font/sanfrancisco_semi_bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SF.Size16" parent="normal_text">
        <item name="android:fontFamily">@font/sanfrancisco</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="divider">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0.05dp</item>
        <item name="android:background">@color/line</item>
    </style>
</resources>
