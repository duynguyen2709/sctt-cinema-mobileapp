<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.cgv">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:name=".CoreApplication"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        tools:ignore="GoogleAppIndexingWarning"
        tools:targetApi="m">
        <activity android:name=".ui.ticket.TicketActivity"
            android:launchMode="singleInstance"/>
        <activity android:name=".ui.schedule.TicketByTheater"
            android:launchMode="singleInstance"/>
        <activity android:name=".ui.schedule.SchedulerByMovie"
            android:launchMode="singleInstance"/>
        <activity android:name=".ui.signup.SignUpActivity" />
        <activity android:name=".ui.login.LogInActivity" />
        <activity android:name=".ui.history.HistoryTransactionActivity" />
        <activity
            android:name=".ui.home.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.detail.DetailActivity" />
    </application>

</manifest>